<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aweika.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aweika.entity.User">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="user_age" property="userAge" />
        <result column="user_email" property="userEmail" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_name, user_age, user_email
    </sql>

    <select id="selectPageByOwn" resultMap="BaseResultMap">
        select * from user
    </select>

    <insert id="insertByOwn" >
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <!--<if test="id != null">
            id,
        </if>-->
        id,
        <if test="userName != null">
            user_name,
        </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <!--<if test="id != null">
            #{id},
        </if>-->
        #{id},
        <if test="userName != null">
            #{userName},
        </if>
        </trim>
    </insert>

    <select id="select" resultType="com.aweika.entity.User">
        select id,DATE_FORMAT(user_date,'%Y-%m-%d') user_date
        from user
    </select>
</mapper>
